{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@trophoria/*": ["src/*"],
      "@trophoria/core/*": ["src/core/*"],
      "@trophoria/modules": ["src/modules"],
      "@trophoria/modules/*": ["src/modules/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
