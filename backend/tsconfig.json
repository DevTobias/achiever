{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@trophoria/*": ["src/*"],
      "@trophoria/modules/*": ["src/modules/*"],
      "@trophoria/libs/common": ["libs/common/src"],
      "@trophoria/libs/core": ["libs/core/src"],
      "@trophoria/test/*": ["test/*"],
      "@trophoria/graphql": ["config/graphql/@generated"],
      "@trophoria/config/*": ["config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
