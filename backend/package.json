{
  "name": "trophoria-api",
  "description": "A GraphQL endpoint that lets you fetch trophy, user and game data from the PSN Network.",
  "author": "Trophoria",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist&&nest build",
    "start": "node dist/main",
    "start:dev": "rimraf dist&&nest start --watch",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "prisma:generate": "prisma generate --schema=./config/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./config/prisma/schema.prisma",
    "prisma:migrate:test": "prisma migrate dev --schema=./config/prisma/test.schema.prisma",
    "prisma:studio": "prisma studio --schema=./config/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "^8.0.0",
    "@fastify/csrf-protection": "^5.1.0",
    "@fastify/helmet": "^9.1.0",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.11",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.11",
    "@nestjs/graphql": "^10.0.22",
    "@nestjs/mercurius": "^10.0.22",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-fastify": "9.0.11",
    "@nestjs/terminus": "^9.1.1",
    "@nestjs/throttler": "^3.0.0",
    "@prisma/client": "4.2.1",
    "bcrypt": "^5.0.1",
    "cache-manager": "^4.1.0",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fastify": "^4.5.2",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "mercurius": "^10.1.1",
    "nestjs-pino": "^3.1.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pino-http": "^8.2.0",
    "pino-pretty": "^9.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.6",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/testing": "^9.0.11",
    "@trophoria/eslint-config": "^1.0.1",
    "@trophoria/prettier-config": "^1.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^4.0.1",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/jest": "^28.1.7",
    "@types/node": "18.7.11",
    "@types/passport-jwt": "^3.0.6",
    "jest": "^28.1.3",
    "prisma": "4.2.1",
    "prisma-nestjs-graphql": "^17.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "setup",
      "health",
      "main.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@trophoria/libs/common": "<rootDir>/libs/common/src",
      "@trophoria/libs/core": "<rootDir>/libs/core/src",
      "@trophoria/modules/(.*)": "<rootDir>/src/modules/$1",
      "@trophoria/test/(.*)": "<rootDir>/test/$1",
      "@trophoria/config/(.*)": "<rootDir>/config/$1",
      "@trophoria/(.*)": "<rootDir>/src/$1"
    }
  },
  "prettier": "@trophoria/prettier-config",
  "eslintConfig": {
    "extends": [
      "@trophoria/eslint-config"
    ],
    "ignorePatterns": [
      "**/@generated/*"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off"
    }
  }
}
