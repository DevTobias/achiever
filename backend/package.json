{
  "name": "trophoria-api",
  "description": "A GraphQL endpoint that lets you fetch trophy, user and game data from the PSN Network.",
  "author": "Trophoria",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist&&nest build",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate --schema=./config/prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cookie": "^7.3.1",
    "@fastify/csrf-protection": "^5.1.0",
    "@fastify/helmet": "^9.1.0",
    "@nestjs/common": "^9.0.3",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^9.0.3",
    "@nestjs/graphql": "^10.0.18",
    "@nestjs/mercurius": "^10.0.17",
    "@nestjs/platform-fastify": "9.0.4",
    "@nestjs/throttler": "^3.0.0",
    "@prisma/client": "4.1.0",
    "cache-manager": "^4.1.0",
    "cache-manager-redis-store": "^2.0.0",
    "fastify": "^4.0.0",
    "graphql": "^16.5.0",
    "mercurius": "^10.1.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@infotition/eslint-config": "^2.2.0",
    "@infotition/prettier-config": "^1.0.0",
    "@nestjs/cli": "^9.0.0",
    "@types/cache-manager": "^4.0.1",
    "@types/cache-manager-redis-store": "^2.0.1",
    "@types/node": "18.0.6",
    "prisma": "4.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "prettier": "@infotition/prettier-config",
  "eslintConfig": {
    "extends": [
      "@infotition/eslint-config"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "off"
    }
  }
}
